---
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'

const { content } = Astro.props;
---
<html>
  <head>
    <title>{content.title}</title>
  </head>
  <body>
    <Navbar />
    <div class="min-h-screen mt-10 mx-auto max-w-screen-lg px-3">
      <div class="flex items-center" >
        <!-- change url to https://github.com/lucasangelino/blogg/blob/main/src/pages/posts/{POST_NAME} -->
        <!-- <img src="https://midu.dev/images/tags/performance.png" class="w-20 mr-7" alt="Title Image"> -->
        <div class="my-16 mx-auto">
          <h1 class="font-semibold md:text-8xl lg:text-4xl">{content.title}</h1>
          <div class="my-4">
            <span class="font-normal md:text-3xl lg:text-xl">{content.date} - </span>
            <span class="md:text-3xl lg:text-xl">{content.readtime} minutos de lectura üë®‚Äçüíª </span>
              <a href="https://github.com/lucasangelino/blogg/pulls" target="_blank">              
                <span class="md:text-3xl lg:text-xl font-semibold hover:text-blue-500">¬øUna errata? Edita el articulo</span>
              </a>
          </div>
        </div>
      </div>
      <div class="my-8">
        <slot />
      </div>
    </div>
    <Footer /> 
  </body>
</html>

<style is:global>
  * {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  }

  p, li {
    color: #333;
    font-size: 18px;
    line-height: 28px;
    margin: 40px auto;
    margin-bottom: 32px;
    word-break: break-word;
  }
  h2 {
    color: #0068b8;
    font-size: 24px;
    font-weight: 600;
    margin: 40px auto;
  }
</style>