---
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'
import SideBar from '../components/SideBar.astro';

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
  <meta name='description' content={description} />
		<meta name='theme-color' content='#fff600' />
		<link rel='icon' href='/favicon.svg' />
		<link rel='mask-icon' href='/mask-icon.svg' color='#000000' />

		<meta property='og:url' content='https://miduconf.com' />
		<meta property='og:type' content='website' />
		<meta property='og:title' content={title} />
		<meta property='og:description' content={description} />
		<meta property='og:image' content='https://miduconf.com/og.jpg' />

		<meta name='twitter:card' content='summary_large_image' />
		<meta name='twitter:site' content='@Lukio55160780' />
		<meta name='twitter:creator' content='@Lukio55160780' />
		<meta name='twitter:title' content={title} />
		<meta name='twitter:description' content={description} />
		<meta name='twitter:image' content='https://miduconf.com/og.jpg' />

	<title>{title}</title>
</head>
<body>
  <Navbar />

  <div class="min-h-screen mx-auto px-3 max-w-screen-lg flex justify-center mb-10">
    <div class="grid md:grid-cols-4 sm:grid-cols-1">
      <div class="md:col-span-3 sm:col-span-1">
        <div class="flex justify-center sm:mx-0 md:mx-5 min-h-screen">
          <slot />
        </div>
        <div class="h-1 bg-slate-100 rounded-full"></div>
      </div>
      <div class="col-span-1 md:mt-0">
        <SideBar />
      </div>
    </div>
  </div>
  <Footer />
</body>
</html>

<style>
  :root {
    --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
		--font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem); 
    --font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

    --color-text: hsl(12, 5%, 4%);
    --color-bg: hsl(0, 0%, 100%);
		--color-border: hsl(17, 24%, 90%);
  }

  html {
    font-famil: 'Roboto', sans-serif;
    font-size: var(--font-size-base);
    color: var(--color-text);
    background-color: var(--color-bg);
  }

  body {
    margin: 0;
  }
</style>
